<!DOCTYPE html>
<html>
    <head>
        <%- include('./partials/head.ejs') %>
    </head>

    <body class="bg-secondary">
        <%- include('./partials/header.ejs') %>

        <div class="container-fluid mt-2">
            <% if (guild == null) { %>
                <h2 class="text-center">Radbot n'est pas présent sur ce serveur</h3>
                <div class="mt-3 text-center">
                    <a href="/"><button type="button" class="btn btn-primary btn-lg">Retour à la liste des serveurs</button></a>
                </div>
            <% } else { %>
                <h4>Liste des sons</h4>
                <div class="guild-files">
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Poids (en octets)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < guild.files.length; i++) { %>
                                <tr>
                                    <th scope="row"><%= i %></th>
                                    <td><%= guild.files[i].name %></td>
                                    <td><%= guild.files[i].size %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <div class="mt-4 d-grid gap-2">
                    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#upload" aria-expanded="false" aria-controls="collapseUpload">
                        Ajouter un nouveau son
                    </button>
                </div>

                <div class=" mt-2 collapse" id="upload">
                    <h4>Ajout d'un son</h4>
                    <form action="<%= guild.id %>/upload" enctype="multipart/form-data" method="post" class="mt-2">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom du son</label>
                            <input type="text" class="form-control" name="name" id="name">
                            </div>
                        <div class="mb-3">
                            <label for="file" class="form-label">Fichier</label>
                            <input type="file" class="form-control" id="file" name="file" accept="audio/*"></input>
                        </div>
                        <div class="mb-3 d-grid gap-2 col-6 mx-auto">
                            <button class="btn btn-success" type="submit">
                                Envoyer
                            </button>
                        </div>
                    </form>
                </div>
            <% } %>
        </div>

        <%- include('./partials/js.ejs') %>
    </body>
</html>